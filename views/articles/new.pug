extends ../layout
block content

    h1 New article
    form(method="POST", action="/articles")
        div(class="form-group")
            label(for="title") Title
                input(
                    type="text"
                    name="title"
                    class="form-control"
                    id="title"
                    placeholder="Title"
                )
        div(class="form-group")
            label(for="body") Body
                textarea(
                    rows="10"
                    name="body"
                    class="form-control"
                    id="body"
                    placeholder="Body"
                )
        button(type="submit" class="btn btn-default") Create