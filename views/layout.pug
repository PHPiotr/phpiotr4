doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        block stylesheets
    body

        div(class="navbar navbar-default")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false")
                        span(class="sr-only") Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="/") PHPiotr 4.0
                div(class="collapse navbar-collapse" id="navbar-main")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/articles") Articles

                    ul(class="nav navbar-nav navbar-right")
                        - if (session.user) {
                            li
                                a(href="/articles/new") Create article
                            li
                                form(method="POST", action="/session?_method=DELETE" class="navbar-form")
                                    button(type="submit" class="btn btn-link") Logout
                            li
                                form(method="POST", action="/users + encodeURIComponent(user.username) + ?_method=DELETE" class="navbar-form")
                                    button(type="submit" class="btn btn-link") Delete account
                        - } else {
                            li
                                a(href="/session/new") Login
                            li
                                a(href="/users/new") Register
                        - }
        div(class="container-fluid")
            div(clss="row")
                if error_messages.length
                    div(class="alert alert-danger alert-dismissible")
                        a(href="#" class="close" data-dismiss="alert" aria-label="close") &times;
                        != error_messages
                if success_messages.length
                    div(class="alert alert-success alert-dismissible")
                        a(href="#" class="close" data-dismiss="alert" aria-label="close") &times;
                        != success_messages
            block content
        script(src="/javascripts/jquery.js")
        script(src="/javascripts/bootstrap.js")
        block javascripts
