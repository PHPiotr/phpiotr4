extends ../layout
block content

    form(method="post" action="/session?_method=DELETE")
        button(type="submit" class="btn btn-default") Log out

    h1= user.full_name
    h2 Bio
    p= user.bio
    h2 Email
    p= user.email
    h2 Gender
    p= user.gender
    h2 Birthday
    p= user.birthday
    - if (user.twitter) {
        h2 Twitter
        p
        a(href= user.twitter_url)="@" + user.twitter
    - }
    h2 Recent Articles:
    - if (undefined !== articles) {
    p
        ul
            - articles.forEach(function(article) {
                li
                    a(href="/articles/" + encodeURIComponent(article.title))= article.title
            - });
    - }

    form(action="/users/" + encodeURIComponent(user.username), method="POST")
        input(name="_method", type="hidden", value="DELETE")
        button(type="submit" class="btn btn-default") Delete