extends ../layout

block content

    h1 New User
    form(method="POST", action="/users")
        div(class="form-group")
            label(for="username") Username
                input(
                    type="text"
                    name="username"
                    class="form-control"
                    id="username"
                    placeholder="Username"
                )
        div(class="form-group")
            label(for="name") Name
                input(
                    type="text"
                    name="name"
                    class="form-control"
                    id="name"
                    placeholder="Name"
                )
        div(class="form-group")
            label(for="email") Email
                input(
                    type="text"
                    name="email"
                    class="form-control"
                    id="email"
                    placeholder="Email"
                )
        div(class="form-group")
            label(for="password") Password
                input(
                    type="password"
                    name="password"
                    class="form-control"
                    id="password"
                    placeholder="Password"
                )
        div(class="form-group")
            label(for="gender") Gender
                input(
                    type="text"
                    name="gender"
                    class="form-control"
                    id="gender"
                    placeholder="Gender"
                )
        div(class="form-group")
            label(for="birthday") Birthday
                input(
                    type="text"
                    name="birthday"
                    class="form-control"
                    id="birthday"
                    placeholder="Birthday"
                )
        div(class="form-group")
            label(for="bio") Bio
                input(
                    type="text"
                    name="bio"
                    class="form-control"
                    id="bio"
                    placeholder="Bio"
                )
        div(class="form-group")
            label(for="twitter") Twitter handle
                input(
                    type="text"
                    name="twitter"
                    class="form-control"
                    id="twitter"
                    placeholder="Twitter handle"
                )
        button(type="submit" class="btn btn-default") Create